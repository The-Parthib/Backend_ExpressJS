<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Home | MiniMizer</title>
    <style>
      /* Global dark theme */
      body {
        font-family: "Segoe UI", Tahoma, Geneva, Verdana, sans-serif;
        background-color: #0f1117;
        color: #e0e0e0;
        margin: 0;
        padding: 0;
      }

      /* Header styling */
      .header {
        color: #ff4c4c;
        text-align: center;
        margin-top: 50px;
        font-size: 2.5rem;
        letter-spacing: 1px;
        text-shadow: 0 0 15px rgba(255, 76, 76, 0.5);
        animation: glow 2s ease-in-out infinite alternate;
      }

      @keyframes glow {
        from {
          text-shadow: 0 0 10px rgba(255, 76, 76, 0.5);
        }
        to {
          text-shadow: 0 0 25px rgba(255, 76, 76, 0.9);
        }
      }

      /* URL generation section */
      .list {
        margin: 50px auto;
        width: 80%;
        font-size: 1.1rem;
        background-color: #1a1d29;
        padding: 25px;
        border-radius: 12px;
        box-shadow: 0 0 20px rgba(255, 255, 255, 0.05);
      }

      label {
        color: #ffb3b3;
        font-weight: bold;
      }

      input[type="text"] {
        width: 60%;
        padding: 10px;
        margin-left: 10px;
        border: 1px solid #444;
        border-radius: 6px;
        background-color: #222530;
        color: #fff;
        outline: none;
        transition: 0.3s;
      }

      input[type="text"]:focus {
        border-color: #ff4c4c;
        box-shadow: 0 0 5px #ff4c4c;
      }

      button {
        background-color: #ff4c4c;
        color: #fff;
        border: none;
        padding: 10px 18px;
        margin-left: 15px;
        border-radius: 6px;
        font-weight: bold;
        cursor: pointer;
        transition: 0.3s;
      }

      button:hover {
        background-color: #ff6666;
        box-shadow: 0 0 10px #ff4c4c;
      }

      /* URL generated message */
      p {
        text-align: center;
        font-size: 1.1rem;
        margin-top: 15px;
        color: #9acdff;
      }

      /* Table container */
      .table {
        margin: 40px auto;
        width: 85%;
        background-color: #1a1d29;
        border-radius: 12px;
        overflow: hidden;
        box-shadow: 0 0 25px rgba(255, 255, 255, 0.05);
      }

      table {
        border-collapse: collapse;
        width: 100%;
      }

      th,
      td {
        border-bottom: 1px solid #2a2d3b;
        padding: 12px 10px;
        text-align: left;
      }

      th {
        background-color: #23273a;
        color: #ffb3b3;
        font-weight: bold;
      }

      tr:nth-child(even) {
        background-color: #20232f;
      }

      tr:hover {
        background-color: #2b2f45;
        transition: 0.2s;
      }

      td {
        color: #dcdcdc;
        font-size: 0.95rem;
      }

      /* Scrollbar customization */
      ::-webkit-scrollbar {
        width: 8px;
      }
      ::-webkit-scrollbar-thumb {
        background-color: #444;
        border-radius: 10px;
      }
      ::-webkit-scrollbar-thumb:hover {
        background-color: #666;
      }
    </style>
  </head>
  <body>
    <h1 class="header">MiniMizer</h1>
    <p><p>
      URL:
      <a
        href="http://localhost:8001/url/"
        target="_blank"
        style="color: #ff8080; text-decoration: none"
        >http://localhost:8001/url/</a
      >
    </p></p>

    <div class="list">
      <form method="post" action="/url">
        <label for="url">Enter URL:</label>
        <input type="text" name="url" placeholder="https://example.com" />
        <button type="submit">Generate</button>
      </form>
    </div>

    <div class="table">
      <table>
        <thead>
          <tr>
            <th>S. No</th>
            <th>URL</th>
            <th>Short Id</th>
            <th>Clicks</th>
          </tr>
        </thead>
        <tbody>
          <% urls.forEach((url, idx) => { %>
          <tr>
            <td><%= idx + 1 %></td>
            <td><%= url.redirectUrl %></td>
            <td><%= url.shortId %></td>
            <td><%= url.visitHistory.length %></td>
          </tr>
          <% }) %>
        </tbody>
      </table>
    </div>
  </body>
</html>
